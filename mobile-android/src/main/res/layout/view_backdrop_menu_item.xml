<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="40dp"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.cardview.widget.CardView
    android:id="@+id/backdrop_menu_item_tap_area"
    android:layout_width="0dp"
    android:layout_height="40dp"
    android:layout_marginHorizontal="16dp"
    android:alpha="@dimen/alpha_low"
    android:background="?attr/colorOnPrimarySurface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

  <TextView
    android:id="@+id/backdrop_menu_item_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:clickable="false"
    android:text="Transaction History"
    android:textAppearance="?attr/textAppearanceSubtitle1"
    android:textColor="?attr/colorOnPrimarySurface"
    app:layout_constraintBottom_toBottomOf="@id/backdrop_menu_item_icon"
    app:layout_constraintStart_toEndOf="@id/backdrop_menu_item_icon"
    app:layout_constraintTop_toTopOf="@id/backdrop_menu_item_icon" />

  <ImageView
    android:id="@+id/backdrop_menu_item_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="false"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:srcCompat="@drawable/ic_money"
    android:layout_marginStart="24dp"
    app:tint="?attr/colorOnPrimarySurface" />

</androidx.constraintlayout.widget.ConstraintLayout>
